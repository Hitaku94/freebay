<h1>Item create form</h1>
 <form  action="/items/create" method="POST">
  <div>
  <label>Title</label>
  <input type="text" name="title" placeholder="Item title">
  <br>
  <br>
  <br>
  <label for="category">Choose a category:</label>
  <select name='category' id="category">
    <option value="house">House</option>
    <option value="sports">Sports</option>
    <option value="games">Games</option>
    <option value="garden">Garden</option>
  </select>
  <br>  
  <br>  
  <br>  
  </div>

  <div>
  <input type="radio" name="condition" id="new" value="new" selected>
  <label for="new">New</label>
  <input type="radio" name="condition" id="used" value="used">
  <label for="used">Used</label>
  </div>
  <br><br><br>
  <div>
    <label>Price</label>
    <input type="text" name="price" placeholder="Item price">
    <br><br><br>
  </div>
<br>  
 
  <div>
  <textarea id="description" name="description" rows="4" cols="50" placeholder="Description">
  </textarea>
  </div>
  <br>


  <!-- <img src="/images/default-image.jpg" alt="item img" width="250">
  <div><span>Add Images</span></div> -->
  <br>
  <button type="submit">Create</button>
  <br>
  <hr>

 



{{#if msg}}
 <div class="error">{{msg}}</div>
{{/if}}