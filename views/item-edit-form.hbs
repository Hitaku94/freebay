<h1 id="item-create-title">Update add : {{result.title}}</h1>

<div class="item-create-container">


  <form action="/items/{{result._id}}/update" method="POST">
  <hr class="line-form">
    <div>
      <label>Title</label>
      <input class="form-radius" type="text" name="title" value="{{result.title}}">
      <br>
      <br>
      <br>
      <label class="form-radius" for="category">Choose a category:</label>
      <select name='category' id="category">
        <option value="house">House</option>
        <option value="sports">Sports</option>
        <option value="games">Games</option>
        <option value="garden">Garden</option>


      </select>
      <br>
      <br>
      <br>
    </div>

    <div>
      <input type="radio" name="condition" id="new" value="new" checked>
      <label for="new">New</label>
      <input type="radio" name="condition" id="used" value="used">
      <label for="used">Used</label>
    </div>
    <br><br><br>
    <div>
      <label>Price</label>
      <input class="form-radius" type="text" name="price" value={{result.price}}>
      <br><br><br>
    </div>
    <br>

    <div>
      <textarea class="form-radius" id="description" name="description" rows="4" cols="50">{{result.description}}</textarea>
    </div>
    <br>

    <div>
      <label for="imageUrl">Add Images</label>
      <input class="form-radius" type="file" name="imageUrl" accept="image/png image/jpg">
      <br><br>
      <button class="btn btn btn-primary" type="submit">Update</button>
      <br><br>
    </div>
  </form>
  {{#if msg}}
  <div class="error msg-container">{{msg}}</div>
  {{/if}}
</div>