<div class="item-detail-img">

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="{{result.img}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="item-detail">
    <h2>{{result.title}}</h2>
    <hr>
    <p class="price">price: <span class="result-price"> ${{result.price}}</span></p>
    <h4>About this item:</h4>
    <div class="text-box">
    <p>{{result.description}}</p>
    </div>
    <ul>
      <li class="list-detail">Category: {{result.category}}</li>
      <li class="list-detail">Condition: {{result.condition}}</li>
    </ul>
    <P>{{result.seller.username}}</p>
  </div>
</div>